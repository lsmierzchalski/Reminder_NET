<Window x:Class="Reminder.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminder"
        mc:Ignorable="d"
        Title="{DynamicResource Reminder}" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Name="textBlockContent" Text="XXXXXXXXXXX" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="Red" />
        <Button Grid.Row="1" Content="OK" Margin="25" Click="Button_Click"/>
    </Grid>
</Window>
